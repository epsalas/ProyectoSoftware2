@model FyJCel.Models.Contacto
@{
    ViewData["Title"] = "Cliente";
    
}
<h1>@ViewData["Title"]</h1>
<h6>"Por favor complete los datos para crear una cuenta..."</h6>
<br>
<!--
<img src="/images/gta-logo.jpg" height="300px" width="300px"><br/> -->
<form asp-action="Create">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="form-group">
    <label name="FirstName">Nombres:</label><br/>
    <input asp-for="FirstName" class="form-control"/><br/>
    <span asp-validation-for="FirstName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label name="LastName">Apellidos:</label><br/>
    <input asp-for="LastName" class="form-control"/><br/>
    <span asp-validation-for="LastName" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label name="Email">Correo Electronico:</label><br/>
    <input asp-for="Email" type="email" class="form-control"/><br/>
  </div>

  <div class="form-group">
    <label name="contraseña">Contraseña:</label><br/>
    <input asp-for="contraseña" type="password" class="form-control"/><br/>
  </div>

  <div class="form-group">
    <label name="contraseña">Nacionalidad:</label><br/>
    <select asp-for="Country" class="form-control form-control-sm">
      <option value="US">Perú</option>
        <option value="CH">China</option>
        <option value="IN">India</option>
        <option value="US">United States</option>
    </select>
  </div>
  
  <div class="form-group">
  <label name="Gender">Género:</label>&nbsp;&nbsp;&nbsp;&nbsp;;&nbsp;&nbsp;
  <label>
      <input asp-for="Gender" type="radio" value="MA" class="form-check-input"/>
      Masculino
  </label>&nbsp;&nbsp;&nbsp;&nbsp;;&nbsp;&nbsp;
  <label>
      <input asp-for="Gender" type="radio" value="FE" class="form-check-input"/>
      Femenino
  </label><br/>
  </div>
  <div>
      <label name="telefono">Teléfono</label><br/>
   </div>
  <input asp-for="telefono"  class="form-control"/><br/>

  <label>
    <input asp-for="Agree" type="checkbox" class="form-check-input"/>
    Estas de acuerdo con los terminos y condiciones
   </label><br/>

  <input type="submit" value="Enviar" class="btn btn-primary" />
</form>
<h1> 
   <!--@Html.DisplayNameFor(model => model.Mensaje)-->
    @Html.DisplayFor(model => model.Mensaje)
</h1>